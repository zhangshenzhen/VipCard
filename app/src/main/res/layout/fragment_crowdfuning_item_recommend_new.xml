<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/home_item_press">
    <!--item 背景-->
    <!-- android:background="@drawable/card_shape_white"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3.5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/igv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_recomment_img_bg"
            android:scaleType="centerCrop"
            android:src="@mipmap/cf_crowdfunding_default_icon" />

        <LinearLayout
            android:id="@+id/linear_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tev_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="1"
                android:text="熔浆阜阳红色太阳项目大...."
                android:textColor="#333333"
                android:textSize="14sp" />
            <!--最高收益-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高收益"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_max_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="1000元"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </RelativeLayout>

           <!--进度条-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <!--<TextView
                    android:id="@+id/tev_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目进度"
                    android:textColor="#52b9b8"
                    android:textSize="12sp" />-->

                <ProgressBar android:id="@+id/pb_project_progress"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="45dp"
                    android:progress="50"
                    style="@style/CFProgressBar"
                    android:layout_marginTop="9dp"
                    />

                <TextView
                    android:id="@+id/tev_progress_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="90%"
                    android:textColor="#52b9b8"
                    android:textSize="10sp" />

            </RelativeLayout>
            <!--目标金额-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标金额"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_target_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="100万"
                    android:textColor="#ff0000"
                    android:textSize="12sp" />

            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/igv_zhongchou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/cf_project_status_start" />


</RelativeLayout>