<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/into" />

        <TextView
            android:id="@+id/tv_ordertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的订单123456789 运输中"
            android:textColor="#333432"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_ordername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_ordertitle"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/s"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#aa000000"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/tv_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordername"
            android:layout_marginTop="3dp"
            android:text="2015-10-02  15:33:21"
            android:textColor="#939393"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>