<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView 
            android:id="@+id/img_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <TextView 
            android:id="@+id/tv_orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易完成"
            android:textColor="#C92D36"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_trash"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="120dp"
	    android:background="#ffffff">
	    <ImageView 
	        android:id="@+id/img_good"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:src="@drawable/default_img"
	        android:layout_marginLeft="15dp"
	        android:layout_centerVertical="true"
	        />
	    <LinearLayout 
	        android:layout_toRightOf="@id/img_good"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp">
	        <TextView 
	            android:id="@+id/tv_goodname"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="旺仔牛奶旺仔牛奶"
	            android:textSize="16sp"
	            android:layout_marginTop="15dp"
	            android:singleLine="true"
	            android:paddingRight="10dp"/>
	        <TextView 
	            android:id="@+id/tv_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="数量：x1"
	            android:layout_marginTop="10dp"
	            android:textSize="14sp"
	            android:singleLine="true"
	            android:paddingRight="10dp"
	            android:textColor="#626262"/>
	    </LinearLayout>
	</RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/tv_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付款："
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/tv_price"
            android:layout_toRightOf="@id/tv_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥205"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/red_btn_bg2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#D13C47"
            android:text="评价"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="15dp"/>
        <TextView 
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/red_btn_bg2"
            android:layout_centerVertical="true"
            android:textColor="#D13C47"
            android:text="申请售后"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/btn2"/>
    </RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
</LinearLayout>
