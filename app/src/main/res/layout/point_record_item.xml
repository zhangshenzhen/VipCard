<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/point_bg"
            android:layout_centerVertical="true"
            android:src="@mipmap/use_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/point_bg"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/background_gradient_start"
                android:id="@+id/point_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值获取"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/point_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-04-25 23:02:20"/>
        </LinearLayout>

    <TextView
        android:textColor="#33CB98"
        android:id="@+id/point_num"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>