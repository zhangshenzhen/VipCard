<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/success_textcolor_red"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/go_conversion_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/conversion_fanhui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="去抵扣"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/go_conversion_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_hf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="240.7dp"
            android:background="@drawable/list_qdk"
            android:orientation="horizontal"
            android:paddingLeft="82.3dp"
            android:paddingTop="46dp">

            <TextView
                android:id="@+id/hf_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用说明:积分可抵扣话费"
                android:textColor="@color/go_conversion_text"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15.7dp"
            android:background="@drawable/list_sd"
            android:orientation="horizontal"
            android:paddingLeft="82.3dp"
            android:paddingTop="46dp">

            <TextView
                android:id="@+id/sd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用说明:积分可抵扣水电费"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_ljmd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15.7dp"
            android:background="@drawable/list_sj"
            android:orientation="horizontal"
            android:paddingLeft="93dp"
            android:paddingTop="46dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="使用说明:积分可抵扣商家消费金额"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
