<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="小计："
            />
        <TextView
            android:id="@+id/tv_price_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="55555元"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f0f0f0"/>
    <LinearLayout
        android:id="@+id/layout_youhui"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:text="优惠券"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_height="wrap_content"
            android:src="@drawable/right"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#999999"/>

    <LinearLayout
        android:id="@+id/red_pack_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:text="红包"
            />
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_red_xianzhi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:text="每单最多只能使用1元"
            />
        <TextView
            android:id="@+id/tv_red_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:textColor="#ec584e"
            android:text="30元"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#999999"/>
    <LinearLayout
        android:id="@+id/point_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:text="使用积分"
            />
        <TextView
            android:id="@+id/tv_jifen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/red_text_dishes"
            android:text="现有100积分"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_jifen_buzou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/red_text_dishes"
            android:text="积分不足"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#999999"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/black"
            android:text="支付总价"
            />

        <TextView
            android:id="@+id/tv_zongjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/black"
            android:text="49元"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dingjin_linear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_dingjin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="@color/red_text_dishes"
            android:text="订单已付："
            />
        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/red_text_dishes"
            android:text="1元"
            />
        <TextView
            android:id="@+id/tv_youhui_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/red_text_dishes"
            android:text="已优惠11元"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/huiyuanbi_linear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="top"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hyb_hyb"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FD9D0A"
            android:text="惠员币抵扣："

            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_order_huiyuanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FD9D0A"
            android:text="1元"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_youhui_price_huiyuanbi"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/red_text_dishes"
            android:text="总优惠11元"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f0f0f0"/>
    <LinearLayout
        android:id="@+id/all_pay_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_pay_zaixian"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_pay_zaixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="13dp"
                android:src="@drawable/selector_selected"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:textColor="@color/black"
                android:text="在线支付"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/pay_online_tv"
                android:textSize="15sp"
                android:text="(需支付14.54元)"
                android:textColor="@color/red_text_dishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#999999"/>
        <RelativeLayout
            android:id="@+id/layout_pay_merchant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_pay_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="13dp"
                android:src="@drawable/selector_selected"/>
            <TextView
                android:id="@+id/merchant_tv"
                android:layout_toRightOf="@id/iv_pay_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:textColor="@color/black"
                android:text="商家余额支付"
                />
            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@id/merchant_tv"
                android:id="@+id/pay_merchant_tv"
                android:textSize="15sp"
                android:text="(需支付14.54元)"
                android:textColor="@color/red_text_dishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/merchant_balance"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额:68.24"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#999999"></View>
        <RelativeLayout
            android:id="@+id/layout_pay_pingtai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_pay_pingtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:src="@drawable/selector_selected"/>
            <TextView
                android:id="@+id/platform_tv"
                android:layout_toRightOf="@id/iv_pay_pingtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:textColor="@color/black"
                android:text="平台余额支付"
                />
            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@id/platform_tv"
                android:id="@+id/pay_platform_tv"
                android:textSize="15sp"
                android:text="(需支付14.54元)"
                android:textColor="@color/red_text_dishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pintai_balance"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额:68.24"/>
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f0f0f0"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"></View>
    <LinearLayout
        android:id="@+id/layout_at_once_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/at_once_pay"
            />

    </LinearLayout>


</LinearLayout>
