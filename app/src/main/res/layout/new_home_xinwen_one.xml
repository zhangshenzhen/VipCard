<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="65dp">
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/xinwen_one_null"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:text="  "/>
<LinearLayout
    android:layout_toLeftOf="@id/xinwen_one_null"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
       android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="  "/>
        <TextView
            android:id="@+id/xinwen_one_title"
            android:text="历史的选择人民的期待: 以习近平为核心党中央治国理政评述"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="  "/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="  "/>
        <TextView
            android:id="@+id/xinwen_one_wangzhan"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头条网"/>
        <TextView
            android:id="@+id/xinwen_one_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:text="516评论"/>
        <TextView
            android:id="@+id/xinwen_one_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2分钟前"
            android:layout_marginLeft="10dp"
            android:textSize="11sp"/>


    </LinearLayout>




</LinearLayout>
</RelativeLayout>