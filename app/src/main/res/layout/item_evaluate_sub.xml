<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#d5d2d2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80.7dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21.3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.bjypt.vipcard.view.RoundImageView
                android:id="@+id/iv_item_icon"
                android:layout_width="44.1dp"
                android:layout_height="44.1dp"
                android:background="@mipmap/pj_yhtx"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_name_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="139****121"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:text="2017.2.1"
                        android:textColor="#666666"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_star1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/pf_wf"/>

                        <ImageView
                            android:id="@+id/iv_star2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/pf_wf"/>

                        <ImageView
                            android:id="@+id/iv_star3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/pf_wf"/>

                        <ImageView
                            android:id="@+id/iv_star4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/pf_wf"/>

                        <ImageView
                            android:id="@+id/iv_star5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@mipmap/pf_wf"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21.3dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="味道还不错，就是太少了，希望下次量大点"
            android:textColor="@color/gray"/>
    </LinearLayout>

</LinearLayout>