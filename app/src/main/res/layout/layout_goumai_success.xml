<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#99aaaaaa"
    >
<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_marginBottom="50dp"
    android:background="@mipmap/goumai_bg_white"
   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买成功"
        android:layout_centerInParent="true"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/dark_black"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/goumai_bt_success"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_jixu_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/goumai_bt_bg"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/red_txt"
            android:text="继续购买"/>
        <TextView
            android:id="@+id/go_back_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/goumai_bt_bg"
            android:textSize="17sp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textColor="@color/red_txt"
            android:text="返回订单"/>
    </LinearLayout>


</RelativeLayout>

</LinearLayout>