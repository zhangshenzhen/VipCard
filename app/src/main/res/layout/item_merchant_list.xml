<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/bg_merchant"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/merchantList_pic"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchantList_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肯德基店(铁心桥)"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/merchantList_address"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                android:text="南京市雨花台铁心桥大街28-1号"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/merchantList_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@mipmap/merchant_distance"
                android:paddingLeft="2dp"
                android:text="距离：44444"
                android:textColor="@color/merchant_diatance"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/merchantList_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/merchant_phone" />

</RelativeLayout>