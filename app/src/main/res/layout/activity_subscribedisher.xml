<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/title_bg"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/realtive_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ad_bg"
            android:layout_width="match_parent"
            android:layout_height="181dp">

            <RelativeLayout
                android:id="@+id/relative_visible"
                android:layout_width="fill_parent"
                android:layout_height="181dp">

                <ImageView
                    android:id="@+id/merchant_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ad_bg"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/sub_click"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_seeImgDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/photo_num_rela"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/see_img_detail"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/photo_num_rela"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/sub_bh"/>

                    <TextView
                        android:id="@+id/photo_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="20dp"
                        android:text="10张"
                        android:textColor="@color/white"
                        android:textSize="@dimen/too_small"/>
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/subscribe_title"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:alpha="0.3"
                android:background="#000">

                <LinearLayout
                    android:id="@+id/subscribe_back"
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/back_disher"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/to_comment"
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_goCommentone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/dishes_menu"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_title"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ad_bg"
            android:background="#EC594D"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_goCommenttwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/back_disher"/>
            </LinearLayout>

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/normal"/>

            <RelativeLayout
                android:id="@+id/visible_comment"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/dishes_menu"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_rel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/rela_title"
            android:background="@color/white">

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="大娘水饺"
                android:textColor="@color/background_gradient_start"/>

            <TextView
                android:id="@+id/tv_pianyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/red_text_dishes"
                android:textSize="@dimen/small"/>
        </RelativeLayout>

        <View
            android:id="@+id/view_two"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/title_rel"
            android:background="@color/line_back"/>

        <RelativeLayout
            android:id="@+id/rel_at_join"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view_two"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/subscribe_join"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_joinViporRecharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/subscribe_join"
                    android:gravity="center"
                    android:text="立即加入"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small"/>
            </RelativeLayout>

            <com.brioal.adtextviewlib.view.ADTextView
                android:id="@+id/tv_sendMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                app:ad_text_front_size="11sp"/>
            <!--<TextView-->
            <!--android:id="@+id/tv_sendMore"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="13dp"-->
            <!--android:text="加入会员\t享会员价"-->
            <!--android:textColor="@color/red_txt"-->
            <!--android:textSize="@dimen/too_small"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginStart="13dp" />-->
        </RelativeLayout>

        <View
            android:id="@+id/view_threes"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/rel_at_join"
            android:background="@color/line_back"/>

        <RelativeLayout
            android:id="@+id/comment_shopname"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view_threes"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="随机立减\t最高免单"
                android:textColor="#F39800"
                android:textSize="@dimen/too_small"/>

            <RelativeLayout
                android:id="@+id/subscribe_account"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/liji_charge_bg"
                    android:gravity="center"
                    android:text="立即买单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/first"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/comment_shopname"
            android:background="@color/line_back"/>

        <LinearLayout
            android:id="@+id/location_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/first"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2.3"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#EEEEEE"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff9b0b"
                        android:text="距离:"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/merchant_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff9b0b"
                        android:text="940m"
                        android:textSize="11sp"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/merchant_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="江苏南京花神大道23号"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:maxEms="10"
                    android:textSize="@dimen/small"/>
            </RelativeLayout>

            <View
                android:layout_width="0.3dp"
                android:layout_height="fill_parent"
                android:background="@color/line_back"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/layout_sub_daozheli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/location_dishes"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="到这里去"
                        android:textSize="@dimen/small"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="0.3dp"
                android:layout_height="fill_parent"
                android:background="@color/line_back"/>

            <RelativeLayout
                android:id="@+id/phone_num"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/dishes_phone"/>

                    <TextView
                        android:id="@+id/merchant_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="15156679232"
                        android:textSize="@dimen/small"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_multiple_shop"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:layout_weight="1.2">

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="fill_parent"
                    android:background="@color/line_back"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/gengduoliansuodian"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="更多连锁店"
                        android:textSize="@dimen/small"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/second"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/location_phone"
            android:background="@color/line_back"/>


        <LinearLayout
            android:id="@+id/add_linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/second"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:gravity="center"
                android:text="商品"/>

            <View
                android:layout_width="0.3dp"
                android:layout_height="fill_parent"
                android:background="@color/line_back"/>

            <TextView
                android:id="@+id/merchant_detail_click"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商家详情"/>

            <View
                android:layout_width="0.3dp"
                android:layout_height="fill_parent"
                android:background="@color/line_back"/>

            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评价"/>

        </LinearLayout>

        <View
            android:id="@+id/ceshi_vi"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/add_linear"
            android:background="@color/line_back"/>

        <LinearLayout
            android:id="@+id/last_line"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ceshi_vi"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/left_listview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:scrollbars="none"/>
                <!--<com.mszx.vipcard.linkagemenu.PinnedHeaderListView
                    android:id="@+id/pinnedListView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/youhui_rela"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/youhui_buy"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/youhui_final"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="13dp"
                            android:text="90"
                            android:textColor="@color/white"
                            android:textSize="23sp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/youhui_final"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/youhui_jieshao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="无门槛即可使用"
                                android:textColor="@color/white"
                                android:textSize="7sp"/>

                            <TextView
                                android:id="@+id/youhui_shiji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元抵扣100元"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/youhui_line"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/line_back"
                        android:visibility="gone"/>

                    <ListView
                        android:id="@+id/pinnedListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_sub_dish_join"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/shop_car_linear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.8">

            <ImageView
                android:id="@+id/shop_car_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/shop_car"/>

            <TextView
                android:id="@+id/car_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/shop_car_iv"
                android:text=""
                android:textColor="#EC594D"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/put_order"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#FD9E09">

            <TextView
                android:id="@+id/starting_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="20元起预售"
                android:textColor="@color/white"
                android:textSize="@dimen/small"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>