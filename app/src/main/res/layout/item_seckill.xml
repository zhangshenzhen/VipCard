<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/iv_good"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_img" />

                <TextView
                    android:id="@+id/tv_people_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#aa000000"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl1"
                android:text="标题标题（主标题）" />

            <TextView
				android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="5dp "
                android:layout_toRightOf="@+id/rl1"
                android:text="适用范围（副标题）"
                android:textColor="#666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_surplus"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/rl1"
                android:text="¥ 1"
                android:textColor="#C81623"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl1"
                android:layout_toRightOf="@+id/rl1"
                android:text="剩余数量：1230"
                android:textColor="#666"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/ll_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rl1"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_shape_white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="截止日期：16-4-19"
                    android:textColor="#666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_red"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="立即抢购"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/shop"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:text="好又多超市"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/locat"
            android:drawablePadding="10dp"
            android:text="南京市栖霞区 仙林街道 金鹰国际购物中心(仙林店)"
            android:textColor="#666"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>