<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_default_adress"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/default_adress_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/hyb_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/back_iv"
                android:text="我的地址"
                android:textColor="#666666"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

    <!--com.bjypt.vipcard.view.QQListView-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_default_adress">

        <ListView
            android:id="@+id/adress_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/iv_default_adress_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/default_pic"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/add_new_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/issue_bg"
        android:gravity="center"
        android:text="添加收货地址"
        android:textColor="@color/white"
        android:textSize="@dimen/large" />
</RelativeLayout>