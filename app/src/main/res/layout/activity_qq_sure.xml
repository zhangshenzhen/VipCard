<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_write_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ec584e">

        <RelativeLayout
            android:id="@+id/rl_printer_back_qq"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_disher" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="@dimen/normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indicator_right_padding"
            android:layout_marginRight="@dimen/indicator_right_padding"
            android:layout_marginTop="@dimen/indicator_right_padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ号码"
                android:textColor="#000"
                android:textSize="@dimen/normal" />

            <TextView
                android:id="@+id/tv_PhoneNum_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="13309089816"
                android:textColor="#000"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indicator_right_padding"
            android:layout_marginRight="@dimen/indicator_right_padding"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值类型"
                android:textColor="@color/default_background"
                android:textSize="@dimen/normal_nor" />

            <TextView
                android:id="@+id/tv_QCellCore_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="QQ会员"
                android:textColor="@color/default_background"
                android:textSize="@dimen/normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/indicator_right_padding"
            android:layout_marginRight="@dimen/indicator_right_padding"
            android:layout_marginTop="@dimen/indicator_right_padding"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额"
                android:textColor="@color/default_background"
                android:textSize="@dimen/normal_nor" />

            <TextView
                android:id="@+id/tv_chargeMoney_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="50(充值不提供发票)"
                android:textColor="@color/default_background"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/line_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/indicator_right_padding"
            android:layout_marginRight="@dimen/indicator_right_padding"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还需支付"
                android:textColor="@color/default_background"
                android:textSize="@dimen/normal_nor" />

            <TextView
                android:id="@+id/tv_needMore_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="50.00元"
                android:textColor="@color/red_text_dishes"
                android:textSize="@dimen/normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/indicator_right_padding"
        android:layout_marginRight="@dimen/indicator_right_padding"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_platformAlmost_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台余额:\t--元"
            android:textColor="@color/default_background"
            android:textSize="@dimen/normal_nor" />

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/relative_goPay_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/scharge_gopay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去加款"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_nor" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="@dimen/indicator_right_padding"
        android:layout_marginRight="@dimen/indicator_right_padding"
        android:text="温馨提示：请在支付前确认号码是否正确哦。"
        android:textColor="#000"
        android:textSize="@dimen/normal_nor" />

    <Button
        android:id="@+id/btn_sureCharge_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indicator_right_padding"
        android:layout_marginLeft="@dimen/indicator_right_padding"
        android:layout_marginRight="@dimen/indicator_right_padding"
        android:background="@mipmap/scharge"
        android:text="确认充值"
        android:textColor="@color/white"
        android:textSize="@dimen/normal" />
</LinearLayout>