    <RelativeLayout
        android:id="@+id/relate_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:background="@color/white"
        android:paddingRight="10dp">

        <RelativeLayout
            android:id="@+id/re_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年化率: "
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_year_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20%"
                    android:textColor="#ff0000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="将获收益: "
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000元"
                    android:textColor="#ff0000"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>



        <TextView
            android:layout_below="@+id/re_income"
            android:id="@+id/tv_project_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/cf_project_detail_item_desc"
            android:padding="10dp"
            android:text="预计收益10元"
            android:textColor="@color/black_3" />
    </RelativeLayout>

</LinearLayout>