<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dp"
    android:layout_width="wrap_content"
    android:paddingRight="5dp"
    android:layout_height="200dp"
     >
    <!--item 背景-->
   <!-- android:background="@drawable/card_shape_white"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/igv_icon"
            android:layout_width="173dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tev_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="1"
                android:text="熔浆阜阳红色太阳项目大...."
                android:textColor="#333333"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/tev_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目进度"
                    android:textColor="#52b9b8"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tev_progress_data"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90%"
                    android:textColor="#52b9b8"
                    android:textSize="12sp" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/igv_zhongchou"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/opening"
        />



</RelativeLayout>