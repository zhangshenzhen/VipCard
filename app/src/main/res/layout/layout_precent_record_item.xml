<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:id="@+id/tv_precent_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="孙志强"
    android:textSize="13sp"
    android:textColor="@color/dark_black"/>
        <TextView
            android:id="@+id/tv_precent_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="15178275030"
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_precent_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额￥：100"
            android:textSize="13sp"
            android:textColor="@color/red_txt"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="费率："
            android:textColor="@color/black"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></View>
        <TextView
            android:id="@+id/tv_transcformount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="到账金额："
            android:textColor="@color/dark_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_precent_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2016-5-9"
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="13sp"
            android:textColor="@color/dark_black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_precent_bankName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="中国工商银行阜阳支行...."
            android:textSize="13sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_precent_bankNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6225554225442...."
            android:textSize="13sp"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>
