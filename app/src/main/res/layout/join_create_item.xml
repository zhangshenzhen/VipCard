<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/envir"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/envir_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="环境"
            android:textColor="#EC594D"
            android:textSize="@dimen/normal_nor" />

        <View
            android:id="@+id/envir_v"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#EC594D"
            android:visibility="visible" />
    </RelativeLayout>
    <View
        android:layout_width="0.3dp"
        android:layout_height="fill_parent"
        android:background="@color/line_back"/>

    <RelativeLayout
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_nor" />

        <View
            android:id="@+id/details_v"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#f57921"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="0.3dp"
        android:layout_height="fill_parent"
        android:background="@color/line_back"/>

    <RelativeLayout
        android:id="@+id/other"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/other_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="其他"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_nor" />

        <View
            android:id="@+id/other_v"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="#f57921"
            android:visibility="invisible" />
    </RelativeLayout>


</LinearLayout>

    <View
        android:layout_marginTop="0.5dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/line_back"/>
</LinearLayout>