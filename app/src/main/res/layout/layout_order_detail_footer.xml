<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f0f0f0"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="订单详情"
        android:textColor="@color/dark_black"
        android:textSize="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="订单号:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_order_hao"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="123456789"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="开始时间:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_yuyue_time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="结束时间:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="数量:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="支付方式:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_zhifu_fangshi"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>
    <LinearLayout
        android:id="@+id/use_remark_linear"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="备注:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_useremark"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="实际支付:"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_shiji_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="20"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_detail_youhui"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="优惠:"
            android:visibility="gone"
            android:textColor="@color/dark_black"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_order_youhui_price"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="8"
            android:visibility="gone"
            android:textColor="@color/dark_black"
            android:textSize="14dp"

            />
    </LinearLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f0f0f0"/>
-->

    <LinearLayout
        android:id="@+id/refuse_total"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/apply_refund"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@mipmap/fangkuai_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请退款"/>
        <LinearLayout
            android:id="@+id/refuse_linear"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝退款理由:"/>
            <TextView
                android:id="@+id/refuse_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请与商家联系"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
