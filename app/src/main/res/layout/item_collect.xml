<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/choose"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/click_selector" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/choose"
            android:padding="8dp" >

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/img_goods"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_img" />

                <TextView
                    android:id="@+id/tv_people_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#aa000000"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="已有432人抢购"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rl1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="小清新家具...小清新家具"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_second_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goods_name"
                    android:gravity="center"
                    android:text="副标题（。。。）"
                    android:textColor="#9C9C9C"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rl_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" >

                    <TextView
                        android:id="@+id/tv_price_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="¥ 139.00"
                        android:textColor="#9C9C9C"
                        android:textSize="14sp" />

                    <View
						android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tv_price_old"
                        android:layout_alignRight="@+id/tv_price_old"
                        android:layout_centerVertical="true"
                        android:background="#9C9C9C" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/rl_old"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="¥ 139.00"
                    android:textColor="#CB1F2B"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/rl_old"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/mine_shape_white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="截止日期：16-4-19"
                        android:textColor="#666"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_red"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="立即抢购"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>