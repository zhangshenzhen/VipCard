<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:hint="收货人姓名"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="#A8000000"
        android:textColorHint="#c1c1c1"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#30d6d5d1" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:hint="手机号码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:textColor="#A8000000"
        android:textColorHint="#c1c1c1"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#30d6d5d1" />

    <!--<TextView
        android:id="@+id/tv_region"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:hint="省   丨   市    丨   区"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="#aa333333"
        android:textSize="15sp" />-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/adress_province"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="省份:"
            android:textColor="#A8000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pull_down"/>


        <Spinner
            android:id="@+id/spinner_province"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/adress_province"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/line_back"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/adress_city"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="城市:"
            android:textColor="#A8000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pull_down"/>
        <Spinner
            android:id="@+id/spinner_city"
            android:layout_toRightOf="@id/adress_city"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/line_back"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/adress_county"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="地区:"
            android:textColor="#A8000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pull_down"/>

        <Spinner
            android:id="@+id/spinner_county"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/adress_county"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#30d6d5d1" />

    <EditText
        android:id="@+id/et_detail"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:gravity="center|left|top"
        android:hint="详细地址"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="#A8000000"
        android:textColorHint="#c1c1c1"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="#fff"
        android:textSize="16sp"
        android:visibility="invisible" />

</LinearLayout>