<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <ImageView 
            android:id="@+id/img_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="120dp"
	    android:background="#ffffff">
	    <ImageView 
	        android:id="@+id/img_good"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:src="@drawable/default_img"
	        android:scaleType="fitXY"
	        android:layout_marginLeft="15dp"
	        android:layout_centerVertical="true"
	        />
	    <LinearLayout 
	        android:layout_toRightOf="@id/img_good"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginLeft="10dp">
	        <TextView 
	            android:id="@+id/tv_good_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="旺旺大礼包"
	            android:textSize="16sp"
	            android:layout_marginTop="15dp"
	            android:singleLine="true"
	            android:paddingRight="10dp"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="颜色：绿色"
	            android:textSize="14sp"
	            android:layout_marginTop="10dp"
	            android:visibility="gone"
	            android:singleLine="true"
	            android:paddingRight="10dp"
	            android:textColor="#626262"/>
	        <TextView 
	            android:id="@+id/tv_count"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="数量：x4"
	            android:textSize="14sp"
	            android:layout_marginTop="2dp"
	            android:singleLine="true"
	            android:paddingRight="10dp"
	            android:textColor="#626262"/>
	    </LinearLayout>
	</RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">
        <TextView 
            android:id="@+id/tv_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款："
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/tv_price"
            android:layout_toRightOf="@id/tv_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥205"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/btn"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/red_btn_bg2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#D13C47"
            android:text="退款中..."
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
	<View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E7E7E7"/>
</LinearLayout>
