            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F3F3F3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="9dp"
                    android:src="@drawable/my_tishi" />

                <com.bjypt.vipcard.view.AdTextViewMult
                    android:id="@+id/scroll_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    app:ad_text_front_size="12sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/all_pay_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--在线支付-->
                <LinearLayout
                    android:id="@+id/layout_pay_zaixian"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_pay_zaixian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:background="@null"
                        android:src="@mipmap/select_false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="13dp"
                        android:text="在线支付"
                        android:textColor="@color/dark_black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(支付宝、微信)"
                        android:textColor="@color/app_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pay_online_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(需支付14.54元)"
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/pay_online_discount_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#d5d2d2" />

                <!--平台余额支付-->
                <LinearLayout
                    android:id="@+id/layout_pay_pingtai"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_pay_pingtai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:src="@mipmap/select_false" />

                    <TextView
                        android:id="@+id/platform_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="13dp"
                        android:layout_toRightOf="@id/iv_pay_pingtai"
                        android:text="平台余额支付"
                        android:textColor="@color/dark_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pay_pingtai_discount_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:layout_toRightOf="@id/platform_tv"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pay_platform_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/pay_pingtai_discount_desc"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pintai_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="余额:"
                        android:textColor="@color/dark_black" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#d5d2d2" />

                <RelativeLayout
                    android:id="@+id/layout_pay_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_pay_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:background="@null"
                        android:src="@mipmap/select_false" />

                    <TextView
                        android:id="@+id/merchant_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="13dp"
                        android:layout_toRightOf="@id/iv_pay_yue"
                        android:text="商家余额支付"
                        android:textColor="@color/dark_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pay_merchant_discount_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="13dp"
                        android:layout_toRightOf="@id/merchant_tv"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pay_merchant_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/pay_merchant_discount_desc"
                        android:text="(需支付14.54元)"
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/merchant_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="余额:"
                        android:textColor="@color/dark_black" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#d5d2d2" />


                <LinearLayout
                    android:id="@+id/layout_pay_card"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_pay_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:background="@null"
                        android:src="@mipmap/select_false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="13dp"
                        android:text="卡余额支付"
                        android:textColor="@color/dark_black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/card_pay_discount_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="13dp"
                        android:layout_toRightOf="@id/merchant_tv"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="@color/red_text_dishes"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pay_card_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/pay_merchant_discount_desc"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/card_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="余额:" />
                </LinearLayout>
            </LinearLayout>

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/redbtn_background"
                android:enabled="false"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="支付总价:"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/zhifu_totalmoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1233.4"
                android:textColor="#fe4359"
                android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_at_once_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/app_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立即买单"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>