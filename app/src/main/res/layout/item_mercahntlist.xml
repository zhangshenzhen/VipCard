<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_merchant_item"
                android:layout_width="106dp"
                android:layout_height="93dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/default_merchant_pic" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="27dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_merchant_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="大娘水饺"
                    android:textColor="@color/fine_text_color"
                    android:textSize="15sp" />

                <!--减-->
                <LinearLayout
                    android:id="@+id/linear_jian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_merchant_item"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/jian_red" />

                    <TextView
                        android:id="@+id/jian_merchant_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:text="积分最高可抵扣消费金额的2%"
                        android:textColor="@color/line_back"
                        android:textSize="12sp" />

                </LinearLayout>

                <!--返-->
                <LinearLayout
                    android:id="@+id/linear_fan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/zhe_green" />

                    <TextView
                        android:id="@+id/fan_merchant_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="返还消费金额的20%"
                        android:textColor="@color/line_back"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/distance_merchant_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@color/background_color"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="449m"
                android:textColor="@color/color_text_address" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/ll_item_all"
        android:layout_marginTop="15dp"
        android:background="@color/withdraw_gray_line"></View>

    <!--地址-->
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dingwei_green" />

        <TextView
            android:id="@+id/address_merchant_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="地址"
            android:textColor="@color/dark_black"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/ll_address"
        android:background="@color/color_line_address"></View>


</RelativeLayout>