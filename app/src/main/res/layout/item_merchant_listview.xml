<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82.7dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_merchant_item"
            android:layout_width="99dp"
            android:layout_height="74dp"
            android:layout_marginTop="13.3dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_dianpu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_merchant_item"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="大娘水饺"
                    android:textColor="#7d7d7d"
                    android:textSize="13.3sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/zhe_img_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/zhe" />

                    <ImageView
                        android:id="@+id/quan_img_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.3dp"
                        android:src="@drawable/quan" />

                    <ImageView
                        android:id="@+id/lian_img_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.3dp"
                        android:src="@drawable/lian" />
                </LinearLayout>

            </RelativeLayout>

            <!--简介-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jianjie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="是不一样的味道，首次充值200送100"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!--减-->
            <LinearLayout
                android:id="@+id/linear_jian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_merchant_item"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/jian_red" />

                <TextView
                    android:id="@+id/jian_merchant_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:text=""
                    android:textColor="@color/line_back"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--返-->
                    <LinearLayout
                        android:id="@+id/linear_fan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/fan_red" />

                        <TextView
                            android:id="@+id/fan_merchant_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/line_back"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <!--折  原来有-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/linear_zhe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/zhe_fang" />

                            <TextView
                                android:id="@+id/discount_merchant_item"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/line_back"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <!--抵  原来有-->
                    <LinearLayout
                        android:id="@+id/linear_dikou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/di" />

                        <TextView
                            android:id="@+id/quan_merchant_item"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/line_back"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--距离-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <!--<TextView-->
                        <!--android:id="@+id/textView5"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="距离:"-->
                        <!--android:textColor="@color/yellow_item_merchant"-->
                        <!--android:textSize="11sp" />-->

                        <TextView
                            android:id="@+id/distance_merchant_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="444km"
                            android:textColor="@color/line_back"
                            android:textSize="10sp" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="6dp"
        android:background="@color/gray_shopping"></View>

    <!--地址-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26.3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/dingwei_red" />

        <TextView
            android:id="@+id/address_merchant_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="地址"
            android:textColor="@color/dark_black"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/merchant_gray_line"></View>

</LinearLayout>
