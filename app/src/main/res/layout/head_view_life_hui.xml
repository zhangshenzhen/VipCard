<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐商家"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/merchant_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_merchant_logo_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ad_bg"
                />
            <TextView
                android:gravity="center_horizontal"
                android:background="@color/transparent"
                android:id="@+id/life_merchant_name_one"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/too_small"
                android:id="@+id/life_merchant_descri_one"
                android:layout_below="@id/life_merchant_name_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>

        <RelativeLayout
            android:id="@+id/merchant_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_merchant_logo_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ad_bg"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/transparent"
                android:id="@+id/life_merchant_name_two"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/too_small"
                android:id="@+id/life_merchant_descri_two"
                android:layout_below="@id/life_merchant_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>

        <RelativeLayout
            android:id="@+id/merchant_three"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_merchant_logo_three"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@mipmap/ad_bg"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/transparent"
                android:id="@+id/life_merchant_name_three"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/too_small"
                android:id="@+id/life_merchant_descri_three"
                android:layout_below="@id/life_merchant_name_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/merchant_linear_two"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/merchant_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_merchant_logo_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ad_bg"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/transparent"
                android:id="@+id/life_merchant_name_four"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/too_small"
                android:id="@+id/life_merchant_descri_four"
                android:layout_below="@id/life_merchant_name_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>

        <RelativeLayout
            android:id="@+id/merchant_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_merchant_logo_five"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@mipmap/ad_bg"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/transparent"
                android:id="@+id/life_merchant_name_five"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/too_small"
                android:id="@+id/life_merchant_descri_five"
                android:layout_below="@id/life_merchant_name_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>

        <RelativeLayout
            android:id="@+id/merchant_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/life_merchant_logo_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/ad_bg"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:background="@color/transparent"
                android:id="@+id/life_merchant_name_six"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/too_small"
                android:id="@+id/life_merchant_descri_six"
                android:layout_below="@id/life_merchant_name_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="6dp"
        android:background="@color/gray_line"/>
</LinearLayout>